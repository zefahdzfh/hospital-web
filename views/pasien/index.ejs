<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@1.6.1/dist/flowbite.min.css" rel="stylesheet" />
  <title>Daftar Pasien</title>
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet">
</head>
<body>
  <nav class="bg-gray-800 p-4">
    <div class="max-w-screen-xl flex items-center justify-between mx-auto">
      <a href="/#" class="text-white text-2xl font-semibold">RS Sembuhin Aja</a>
      <div class="flex space-x-4">
        <a href="/pegawai" class="text-white hover:text-blue-400">Pegawai</a>
        <a href="/dokter" class="text-white hover:text-blue-400">Dokter</a>
        <a href="/pasien" class="text-white hover:text-blue-400">Pasien</a>
        <a href="/poli" class="text-white hover:text-blue-400">Poli</a>
        <a href="/reservasi" class="text-white hover:text-blue-400">Reservasi</a>
      </div>
    </div>
  </nav>
  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Daftar Pasien</h2>
      <div class="d-flex justify-content-end mb-3">
        <a href="/pasien/new" class="btn btn-success">+ Tambah Pasien</a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>No RM</th>
              <th>KTP</th>
              <th>Nama Pasien</th>
              <th>Tanggal Lahir</th>
              <th>Alamat</th>
              <th>Tinggi</th>
              <th>Berat</th>
              <th>Ibu Kandung</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% pasien.forEach(function(p) { %>
              <tr>
                <td><%= p.no_rm %></td>
                <td><%= p.ktp %></td>
                <td><%= p.nama_pasien %></td>
                <td><%= p.tgl_lahir.toISOString().substring(0,10) %></td>
                <td><%= p.alamat %></td>
                <td><%= p.tinggi %></td>
                <td><%= p.berat %></td>
                <td><%= p.ibu_kandung %></td>
                <td>
                  <a href="/pasien/<%= p.no_rm %>" class="btn btn-info btn-sm">Detail</a>
                  <a href="/pasien/<%= p.no_rm %>/edit" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/pasien/<%= p.no_rm %>/delete" method="POST" 
                        class="d-inline" onsubmit="return confirm('Yakin ingin menghapus?')">
                    <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
