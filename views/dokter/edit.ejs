<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Dokter</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4 text-center">Edit Dokter</h1>
    <form action="/dokter/<%= dokter.id_dokter %>/edit" method="POST" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">Nama Dokter</label>
        <input type="text" name="nama_dokter" value="<%= dokter.nama_dokter %>" required
               class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-400">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Poli</label>
        <select name="id_poli" required class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-400">
          <% polies.forEach(poli => { %>
            <option value="<%= poli.id_poli %>" <%= poli.id_poli == dokter.id_poli ? 'selected' : '' %>><%= poli.nama_poli %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Nama Pegawai</label>
        <select name="id_pegawai" required class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-400">
          <% pegawais.forEach(pegawai => { %>
            <option value="<%= pegawai.id_pegawai %>" <%= pegawai.id_pegawai == dokter.id_pegawai ? 'selected' : '' %>><%= pegawai.nama_pegawai %></option>
          <% }) %>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Status Dokter</label>
        <select name="status_dokter" required class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-400">
          <option value="Telah ditangani" <%= dokter.status_dokter === 'Telah ditangani' ? 'selected' : '' %>>Telah ditangani</option>
          <option value="Belum ditangani" <%= dokter.status_dokter === 'Belum ditangani' ? 'selected' : '' %>>Belum ditangani</option>
        </select>
      </div>
      <div class="flex justify-between">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
          Update
        </button>
        <a href="/dokter" class="text-gray-700 hover:underline">Kembali</a>
      </div>
    </form>
  </div>
</body>
</html>
