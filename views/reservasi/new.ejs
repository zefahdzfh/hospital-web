<!-- views/reservasi/new.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tambah Reservasi</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Tambah Reservasi</h1>
    <form action="/reservasi" method="POST">
      <!-- Pilihan No RM dari data pasien -->
      <div class="mb-3">
        <label for="no_rm" class="form-label">No RM</label>
        <select class="form-select" id="no_rm" name="no_rm" required>
          <option value="">Pilih Pasien</option>
          <% pasienList.forEach(function(p) { %>
            <option value="<%= p.no_rm %>">
              <%= p.no_rm %> - <%= p.nama_pasien %>
            </option>
          <% }); %>
        </select>
      </div>
      
      <!-- Pilihan Poli -->
      <div class="mb-3">
        <label for="id_poli" class="form-label">Poli</label>
        <select class="form-select" id="id_poli" name="id_poli" required>
          <option value="">Pilih Poli</option>
          <% poliList.forEach(function(p) { %>
            <option value="<%= p.id_poli %>">
              <%= p.nama_poli %>
            </option>
          <% }); %>
        </select>
      </div>

      <!-- Pilihan Dokter -->
      <div class="mb-3">
        <label for="id_dokter" class="form-label">Dokter</label>
        <select class="form-select" id="id_dokter" name="id_dokter" required>
          <option value="">Pilih Dokter</option>
          <% dokterList.forEach(function(d) { %>
            <option value="<%= d.id_dokter %>">
              <%= d.nama_dokter %>
            </option>
          <% }); %>
        </select>
      </div>
      
      <div class="mb-3">
        <label for="no_antrian" class="form-label">No Antrian</label>
        <input type="number" class="form-control" id="no_antrian" name="no_antrian" required>
      </div>
      
      <button type="submit" class="btn btn-primary">Simpan</button>
      <a href="/reservasi" class="btn btn-secondary ms-2">Kembali ke Daftar Reservasi</a>
    </form>
  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
