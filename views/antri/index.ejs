<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@1.6.1/dist/flowbite.min.css" rel="stylesheet" />
  <title>Daftar Antrian</title>
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet">
</head>
<body>
    <nav class="bg-gray-800 p-4">
        <div class="max-w-screen-xl flex items-center justify-between mx-auto">
          <a href="/#" class="text-white text-2xl font-semibold">RS Sembuhin Aja</a>
          <div class="flex space-x-4">
            <a href="/pegawai" class="text-white hover:text-blue-400">Pegawai</a>
            <a href="/dokter" class="text-white hover:text-blue-400">Dokter</a>
            <a href="/pasien" class="text-white hover:text-blue-400">Pasien</a>
            <a href="/poli" class="text-white hover:text-blue-400">Poli</a>
            <a href="/reservasi" class="text-white hover:text-blue-400">Reservasi</a>
            <a href="/antri" class="text-white hover:text-blue-400">Antrian</a>
            <a href="/pembayaran" class="text-white hover:text-blue-400">Pembayaran</a>
          </div>
        </div>
      </nav>

  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Daftar Antrian</h2>
      <div class="d-flex justify-content-end mb-3">
        <a href="/antri/new" class="btn btn-success">+ Tambah Antrian</a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>No. Antrian</th>
              <th>Tanggal</th>
              <th>Hari</th>
              <th>Jam</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% antris.forEach(function(antri) { %>
              <tr>
                <td><%= antri.no_antrian %></td>
                <td><%= antri.tanggal %></td>
                <td><%= antri.hari %></td>
                <td><%= antri.jam %></td>
                <td>
                  <a href="/antri/<%= antri.no_antrian %>" class="btn btn-info btn-sm">Detail</a>
                  <a href="/antri/<%= antri.no_antrian %>/update" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/antri/<%= antri.no_antrian %>/delete" method="POST" 
                        class="d-inline" onsubmit="return confirm('Yakin ingin menghapus antrian ini?')">
                    <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
