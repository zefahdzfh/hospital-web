<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@1.6.1/dist/flowbite.min.css" rel="stylesheet" />
  <title>Daftar Dokter</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="bg-gray-800 p-4">
    <div class="max-w-screen-xl flex items-center justify-between mx-auto">
      <a href="/#" class="text-white text-2xl font-semibold">RS Sembuhin Aja</a>
      <div class="flex space-x-4">
        <a href="/#" class="text-white hover:text-blue-400">Pegawai</a>
        <a href="/dokter" class="text-white hover:text-blue-400">Dokter</a>
        <a href="/pasien" class="text-white hover:text-blue-400">Pasien</a>
        <a href="/reservasi" class="text-white hover:text-blue-400">Reservasi</a>
        <a href="/poli" class="text-white hover:text-blue-400">Poli</a>
      </div>
    </div>
  </nav>
  <div class="container mt-5">
    <h2>Daftar Dokter</h2>
    <a href="/dokter/new" class="btn btn-primary mb-3">Tambah Dokter</a>
    <table class="table">
      <thead>
        <tr>
          <th>ID Dokter</th>
          <th>Nama Dokter</th>
          <th>Poli</th>
          <th>Status Pegawai</th> <!-- Kolom untuk Status Pegawai -->
          <th>Status Dokter</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% dokters.forEach(dokter => { %>
          <tr>
            <td><%= dokter.id_dokter %></td>
            <td><%= dokter.nama_dokter %></td>
            <td><%= dokter.nama_poli %></td>
            <td><%= dokter.status_pegawai %></td> <!-- Menampilkan Status Pegawai -->
            <td><%= dokter.status_dokter %></td>
            <td>
              <a href="/dokter/<%= dokter.id_dokter %>/detail" class="btn btn-warning btn-sm">Detail</a>
              <a href="/dokter/<%= dokter.id_dokter %>/edit" class="btn btn-warning btn-sm">Edit</a>
              <form action="/dokter/<%= dokter.id_dokter %>" method="POST" style="display:inline;">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>              
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
