<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@1.6.1/dist/flowbite.min.css" rel="stylesheet" />
  <title>Daftar Pembayaran</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="bg-gray-800 p-4">
        <div class="max-w-screen-xl flex items-center justify-between mx-auto">
          <a href="/#" class="text-white text-2xl font-semibold">RS Sembuhin Aja</a>
          <div class="flex space-x-4">
            <a href="/pegawai" class="text-white hover:text-blue-400">Pegawai</a>
            <a href="/dokter" class="text-white hover:text-blue-400">Dokter</a>
            <a href="/pasien" class="text-white hover:text-blue-400">Pasien</a>
            <a href="/poli" class="text-white hover:text-blue-400">Poli</a>
            <a href="/reservasi" class="text-white hover:text-blue-400">Reservasi</a>
            <a href="/antri" class="text-white hover:text-blue-400">Antrian</a>
            <a href="/pembayaran" class="text-white hover:text-blue-400">Pembayaran</a>
          </div>
        </div>
      </nav>
  
  <div class="container mt-5">
    <h2 class="text-center mb-4">Daftar Pembayaran</h2>
    <a href="/pembayaran/new" class="btn btn-success mb-3">+ Tambah Pembayaran</a>
    <table class="table table-striped">
      <thead><tr><th>ID</th><th>No Antrian</th><th>Tipe</th><th>Instansi</th><th>Aksi</th></tr></thead>
      <tbody>
        <% pembayaran.forEach((pay) => { %>
          <tr>
            <td><%= pay.id_pembayaran %></td>
            <td><%= pay.no_antrian %></td>
            <td><%= pay.tipe_pembayaran %></td>
            <td><%= pay.nama_instansi %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
