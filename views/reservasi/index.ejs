<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@1.6.1/dist/flowbite.min.css" rel="stylesheet" />
  <title>Data Reservasi</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="bg-gray-800 p-4">
    <div class="max-w-screen-xl flex items-center justify-between mx-auto">
      <a href="/#" class="text-white text-2xl font-semibold">RS Sembuhin Aja</a>
      <div class="flex space-x-4">
        <a href="/pegawai" class="text-white hover:text-blue-400">Pegawai</a>
        <a href="/dokter" class="text-white hover:text-blue-400">Dokter</a>
        <a href="/pasien" class="text-white hover:text-blue-400">Pasien</a>
        <a href="/poli" class="text-white hover:text-blue-400">Poli</a>
        <a href="/reservasi" class="text-white hover:text-blue-400">Reservasi</a>
        <a href="/antri" class="text-white hover:text-blue-400">Antrian</a>
        <a href="/pembayaran" class="text-white hover:text-blue-400">Pembayaran</a>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4">Data Reservasi</h2>
      <div class="d-flex justify-content-end mb-3">
        <a href="/reservasi/new" class="btn btn-success">+ Tambah Reservasi</a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>ID Reservasi</th>
              <th>No RM</th>
              <th>Nama Poli</th>
              <th>Nama Dokter</th>
              <th>No Antrian</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% reservasis.forEach(function(r) { %>
              <tr>
                <td><%= r.id_reservasi %></td>
                <td><%= r.no_rm %></td>
                <td><%= r.nama_poli %></td>
                <td><%= r.nama_dokter %></td>
                <td><%= r.no_antrian %></td>
                <td>
                  <a href="/reservasi/<%= r.id_reservasi %>/edit" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/reservasi/<%= r.id_reservasi %>/delete" method="POST" 
                        class="d-inline" onsubmit="return confirm('Yakin ingin menghapus reservasi ini?')">
                    <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
